{
  "element": "ul",
  "class": "flex flex-col gap-8",
  "__children": [
    {
      "element": "li",
      "class": "rounded bg-cover bg-center bg-blend-hue",
      "children": [
        {
          "element": "div",
          "class": "rounded flex flex-col gap-2 p-8 bg-gradient-to-b from-transparent to-gray-800",
          "children": [
            {
              "element": "Link",
              "children": [
                {
                  "element": "h2",
                  "class": "text-3xl text-white",
                  "__children": "data.title"
                }
              ],
              "attributes": {
                "==href": "'/blog/' + data.slug + '/'"
              }
            },
            {
              "element": "time",
              "class": "font-thin text-base text-gray-300",
              "==children": "new Date(data.date).toLocaleDateString('en-US')",
              "attributes": {
                "__datetime": "data.date"
              }
            },
            {
              "element": "p",
              "class": "text-md text-gray-200",
              "__children": "data.preview"
            }
          ]
        }
      ],
      "attributes": {
        "x-state": "{ image: '' }",
        "==x-intersect": "`{ options: { once: true }, state: { image: 'background-image:url(` + data.images.thumbnail + `)' } }`",
        "x-attr": "",
        "@style": "state.image"
      }
    }
  ]
}
