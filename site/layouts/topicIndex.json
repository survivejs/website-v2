{
  "element": "BaseLayout",
  "props": {
    "content": {
      "element": "div",
      "class": "md:mx-auto my-8 px-4 md:px-0 w-full lg:max-w-3xl",
      "children": [
        {
          "element": "h1",
          "class": "text-4xl mb-8",
          "children": "Topics"
        },
        {
          "element": "ul",
          "class": "flex flex-col gap-2",
          "foreach": ["context.topics", {
            "element": "li",
            "class": "rounded",
            "children": [
              {
                "element": "div",
                "class": "rounded flex flex-col gap-1",
                "children": [
                  {
                    "element": "Link",
                    "children": [
                      {
                        "element": "h2",
                        "class": "text-xl",
                        "children": [
                          {
                            "element": "span",
                            "class": "pr-1",
                            "__children": "props.title"
                          },
                          {
                            "element": "span",
                            "class": "text-sm font-light",
                            "==children": "'(' + props.posts.length + ')'"
                          }
                        ]
                      }
                    ],
                    "attributes": {
                      "==href": "'/topics/' + props.slug + '/'"
                    }
                  }
                ]
              }
            ]
          }]
        }
      ]
    }
  }
}
