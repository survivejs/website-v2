{
  "allow": ["net", "read"],
  "env": {
    "NO_COLOR": 1
  },
  "scripts": {
    "bootstrap": "vr get-images",
    "get-images": "deno run scripts/get-images.ts > .images.json",
    "install:gustwind": "deno install -A --unstable --no-check -f https://deno.land/x/gustwind@v0.17.3/cli.ts",
    "build": "gustwind -b",
    "start": "gustwind -d",
    "ci:build": "deno run -A --unstable --no-check https://deno.land/x/gustwind@v0.17.3/cli.ts -b"
  }
}
